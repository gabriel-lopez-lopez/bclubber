{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "no-console": "off",
        "strict": [
            "error",
            "global"
        ],
        "curly": "warn",
        "no-unused-vars": "warn",
        "react/display-name": 1,
        "react/prop-types": 0,
        "react/no-string-refs": 0,
        "react/no-deprecated": 0
    },
    "settings" : {
        "react" : {
            "version" : "detect"
        }
    },
    "plugins": [
        "react"
    ]
}